html
  background-color: #ddd

body
  background-color: #eee
  width: 100%
  max-width: 800px
  height: 100%
  min-height: 600px
  margin: auto
  h1
    padding-top: 1em
    text-align: center

h2, pre
  padding-left: 5%

a
  text-decoration: none
  color: black
  &.disconnect
    color: #444499
    margin-left: 2em
    font-size: 8pt
    vertical-align: middle
  &.banner
    text-transform: capitalize
    font-variant: small-caps
    &:hover
      background-color: #d0d0ff

.banner
  display:block
  background-color: #e0e0ff
  border-top: 1px solid #d0d0ff
  border-bottom: 1px solid #d0d0ff
  padding-top: 0.5em
  padding-bottom: 0.5em
  text-align: center
  font-family: sans-serif
  font-size: 18pt

ul.tags
  display: inline
  list-style-type: none
  li
    cursor: pointer
    margin-right: 1em
    border: 1px solid #ccc
    border-radius: 10px
    box-shadow: 3px 3px 10px #999
    padding: 5px 1em 5px 1em
    display: inline
    &:hover
      box-shadow: 1px 1px 7px #999



pre, input
  display: inline
pre code
  overflow-x: scroll
  margin-top: 2em
  border-radius: 10px 10px 10px 10px
  display: none
  opacity: 0.0
